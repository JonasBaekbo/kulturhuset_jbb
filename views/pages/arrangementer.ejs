<!DOCTYPE html>
<html lang="en">
<%= include ../includes/head.ejs %>

    <body>
        <%= include ../includes/header.ejs %>
            <main role="main" class="container">
                <% arrangement.forEach(function (test){ %>
                    <div class="d-flex align-items-center p-3 my-3 text-white-50 arrangement rounded box-shadow">
                        <img class="mr-3" src="/images/<%= test.Type %>.svg" alt="" width="48" height="48">
                        <div class="lh-100">
                            <strong class="mb-0 text-white lh-100">
                                <%= test.navn %>
                                    <br>
                                    <%= test.Dato.getDate() + ". " + maaned[test.Dato.getMonth()]+ " " + test.Dato.getFullYear() + " " + test.Dato.getHours() + ":" + (test.Dato.getMinutes()<10?'0':'') + test.Dato.getMinutes() %>
                            </strong>
                        </div>
                    </div>
                    <!-- <div class="my-3 p-3 bg-white rounded box-shadow"> -->
                    <div class="media pt-3">
                        <img data-src="holder.js/32x32?theme=thumb&bg=007bff&fg=007bff&size=1" alt="" class="mr-2 rounded">
                        <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                            <strong class="d-block text-gray-dark">
                                <%= test.Dato.getDate() + ". " + maaned[test.Dato.getMonth()]+ " " + test.Dato.getFullYear() + " " + test.Dato.getHours() + ":" + (test.Dato.getMinutes()<10?'0':'') + test.Dato.getMinutes() %>
                            </strong>
                            <%= test.Pris %> kr. -
                                <%= test.Sal %>
                                    <br>
                                    <img src="/images/<%= test.billede %>" alt="<%= test.navn %>">
                        </p>
                        <a class="btn btn-secondary" href="arrangement/<%= test.id %>" role="button">LÃ¦s mere &raquo;</a>
                    </div>
                    <% }); %>

                        <%= include ../includes/footer.ejs %>

    </body>


</html>